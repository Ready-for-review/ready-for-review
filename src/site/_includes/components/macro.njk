{% macro player(episode, source)%}
  <div class="episode-player-card">
    <audio class="interactive interactive--full-width space-bottom-md rfr-player" controls preload="badge badge--metadata">
      <source type="audio/mpeg" src="{{episode.enclosure.url}}&source={{source}}">
    </audio>
  </div>
{% endmacro %}

{% macro video(video) %}
  <div class="video-player rfr-player">
    <iframe 
        src="https://www.youtube.com/embed/{{video.snippet.resourceId.videoId}}?iv_load_policy=3&amp;modestbranding=1&amp;playsinline=1&amp;showinfo=0&amp;rel=0&amp;enablejsapi=1" 
        allowfullscreen 
        allowtransparency ></iframe>
  </div>
{% endmacro %}