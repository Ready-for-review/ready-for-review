{%- from "components/macro.njk" import player -%}
{% if episodes.items.length and episodes.items.length > 0 %}
  <section class="section section-alt" id="episoden">
    <div class="container">
      <div class="card card--featured">
        <div class="episode-number">
          {% if episodes
            .items[0]
            .episodeNumber %}Episode {{ episodes.items[0].episodeNumber }}
          {% else %}Aktuelle Episode{% endif %}
        </div>
        <h3 class="title-3">{{ episodes.items[0].title }}</h3>
        <p class="episode-description">
          {{ episodes.items[0].contentSnippet or episodes.items[0].content | striptags | truncate(200) }}
        </p>
        <div class="interactive interactive--padded interactive--bordered space-md">
          {{ player(episodes.items[0], "rfr") }}
        </div>
        <div class="episode-actions">
          <a href="/{{ episodes.items[0] | toEpisodeUrl }}/" class="btn btn--primary">
      📝 Zur Episode
    </a>
          <a href="/episoden" class="btn btn--secondary">
      📋 Alle Episoden
    </a>
        </div>
      </div>
    </div>
  </section>
{% endif %}