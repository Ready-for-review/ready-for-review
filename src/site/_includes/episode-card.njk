<article class="p-8 mb-8 card">
  <time class="text-sm text-gray-800" datetime="{{ episode.isoDate}}">{{ episode.isoDate | shortReadableDateFromISO }}</time>

  <h3 class="text-2xl font-bold leading-tight tracking-tight">
    <a href="/{{episode | toEpisodeUrl }}/" title="{{ episode.title }}">{{episode.title}}</a>
  </h3>

  <audio class="w-full my-4 bg-gray-500 rounded-sm shadow-sm rfr-player" controls preload="none">
    <source type="audio/mpeg" src="{{episode.enclosure.url}}&source=rfr_episodes">
  </audio>
  <p class="my-4 text-right">
    <a href="/{{episode | toEpisodeUrl }}/" title="{{ episode.title }}" class="btn">Shownotes <span>â†’</span></a>
  </p>
</article>