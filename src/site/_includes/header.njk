<header class="bg-white lg:py-0 py-2 shadow">
    <a class="sr-only" href="#main">Direkt zum Inhalt</a>
    <div class="mx-auto max-w-screen-lg flex flex-wrap items-center ">
        <div class="flex-1 flex justify-between items-center">
            <a href="/" class="focus:border-indigo-400">
                <svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
                    <use xlink:href="#icon-microphone"></use>
                </svg>
            </a>
        </div>

        <label for="menu-toggle" class="hidden pointer-cursor block">
            <svg class="fill-current text-gray-900" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
                <title>menu</title>
                <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
            </svg>
        </label>
        <input class="hidden" type="checkbox" id="menu-toggle"/>

        <div class="lg:flex lg:items-center lg:w-auto w-full" >
            <nav>
                {% set navPages = collections.all | eleventyNavigation %}

                <ul class="lg:flex items-center justify-between text-base text-gray-700 pt-4 lg:pt-0">

                    {%- for entry in navPages %}
                        <li>
                            <a class="text-gray-800 lg:p-4 py-3 px-0 block border-b-2 border-transparent hover:border-orange-500 no-underline hover:no-underline" href="{{ entry.url | url }}" data-title="{{ entry.title }}"{% if entry.url == page.url %} aria-current="page"{% endif %}>{{ entry.title }}</a>
                        </li>
                    {%- endfor %}

                </ul>
            </nav>

            <a href="https://twitter.com/readyforreview" class="lg:ml-4 flex items-center justify-start lg:mb-0 mb-4 pointer-cursor">
                <svg width="32" height="32" viewBox="0 0 32 32" class="rounded-full w-10 h-10 border-2 border-transparent hover:bg-orange-200">
                    <use xlink:href="#icon-bird"></use>
                </svg>
                <span class="hidden">Twitter</span>
            </a>

            <a href="https://ready-for-review.podigee.io/feed/mp3" class="lg:ml-4 flex items-center justify-start lg:mb-0 mb-4 pointer-cursor">
                <svg width="32" height="32" viewBox="0 0 32 32" class="rounded-full w-10 h-10 border-2 border-transparent hover:bg-orange-200">
                    <use xlink:href="#icon-feed"></use>
                </svg>
                <span class="hidden">RSS</span>
            </a>

        </div>
    </div>

</header>