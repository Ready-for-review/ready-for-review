      <a href="#" target="”_blank”">RadioPublic</a>
      <a href="#" target="”_blank”">RSS</a>

    </article>
  </section>
  {%endblock%}
  {%block content %}

    {% if episodes.items.length %}
      <section class="bg-white my-12 p-8 shadow rounded">

        {% set episode = episodes.items[0] %}

        <article >
          <time class="text-gray-800 text-sm" datetime="{{ episode.isoDate}}">{{ episode.isoDate | shortReadableDateFromISO }}</time>

          <h2 class="text-3xl font-bold leading-tight tracking-tight">
            <a class="no-underline" href="/{{episode | toEpisodeUrl }}/" title="{{ episode.title }}">{{episode.title}}</a>
          </h2>

          <audio class="shadow rounded bg-gray-500 w-full my-4" controls="controls" preload="auto">
            <source type="audio/mpeg" src="{{episode.enclosure.url}}">
          </audio>
          <p class="my-4 text-right">
            <a href="/{{episode | toEpisodeUrl }}/" title="{{ episode.title }}" class="btn">Shownotes <span>→</span></a>
          </p>
        </article>
        <p class="my-4 text-gray-800">Alle Folgen findet ihr in der <a href="/episoden" title="Alle Podcast Episoden">Episoden</a>-&Uuml;bersicht.</p>

      </section>
    {% endif %}

