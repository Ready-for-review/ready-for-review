<article class="mb-4">
  <time class="text-gray-800 text-sm" datetime="{{ episode.isoDate}}">{{ episode.isoDate | shortReadableDateFromISO }}</time>

  <h3 class="text-2xl font-bold leading-tight tracking-tight">
    <a class="no-underline" href="/{{episode | toEpisodeUrl }}/" title="{{ episode.title }}">{{episode.title}}</a>
  </h3>

  <audio class="rfr-player shadow rounded bg-gray-500 w-full my-4" controls preload="none">
    <source type="audio/mpeg" src="{{episode.enclosure.url}}">
  </audio>
  <p class="my-4 text-right">
    <a href="/{{episode | toEpisodeUrl }}/" title="{{ episode.title }}" class="btn">Shownotes <span>â†’</span></a>
  </p>
</article>