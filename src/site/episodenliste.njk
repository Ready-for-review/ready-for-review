---

pagination:
  data: episodes.items
  size: 1
  alias: item
permalink: "{{item | toEpisodeUrl}}/"
tags: ['episode']
---
{% extends "layout/base.njk" %}
{% block content %}

  <div class="content">
    <article>
      <h1>{{item.title}}</h1>

      <time datetime="{{ item.isoDate}}">{{ item.isoDate | shortReadableDateFromISO }}</time>

      <audio class="shadow rounded bg-gray-500 w-full my-4" controls="controls" preload="auto">
        <source type="audio/mpeg" src="{{item.enclosure.url}}">
      </audio>

      {% episodeContent item %}

    </div>
  {% endblock %}